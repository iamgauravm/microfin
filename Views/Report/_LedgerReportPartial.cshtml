@model List<LedgerViewModel>
@{
    ViewData["Title"] = "Ledger";
    int i = 1;
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body pt-4">
                <table class="table table-bordered table-striped " style="width:100%" id="tblstLedgers">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Particular</th>
                            <th>Credit</th>
                            <th>Debit</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@($"{item.TransDate.ToString("dd-MM-yyyy")}")</td>
                                <td>@item.Particular</td>
                                <td class="text-end">@item.Credit</td>
                                <td class="text-end">@item.Debit</td>
                                <td class="text-end">@item.Balance</td>
                            </tr>                            
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>


