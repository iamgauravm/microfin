@model IEnumerable<ReportCustomerViewModel>
@{
    ViewData["Title"] = "Customers";
    int i = 1;
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body pt-4">
                <table class="table table-bordered table-striped " style="width:100%" id="tblstCustomers">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Customer</th>
                            <th>Diary#</th>
                            <th class="text-end">Loan Amount</th>
                            <th class="text-end">Recovery Amount</th>
                            <th class="text-end">Paid</th>
                            <th class="text-end">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(i++)</td>
                                <td>@($"{item.CustomerName} S/o {item.FatherName}")</td>
                                <td>@item.DiaryNumber</td>
                                <td class="text-end">@item.LoanAmount</td>
                                <td class="text-end">@item.RecoveryAmount</td>
                                <td class="text-end">@item.PaidAmount</td>
                                <td class="text-end">@item.BalanceAmount</td>
                            </tr>                            
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>


