@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Login - MicroFIN</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/MicroFIN.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container text-center">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MicroFIN</a>
        </div>
    </nav>
</header>
<partial name="_CookieConsentPartial" />
<div class="container">
    <main role="main" class="pb-3">
        <div class="row">
            <div class="col-sm-12 col-md-4 offset-md-4">
                <h3 class="text-center"><strong>Login </strong></h3>
                <form asp-action="login" method="post">
                    <div class="form-group mb-2">
                        <label for="userName">User Name</label>
                        <input type="text" class="form-control" id="userName" name="userName" placeholder="Enter user name">
                    </div>
                    <div class="form-group mb-2">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary w-25">Submit</button>
                        <button class="btn btn-info w-25" type="reset">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - MicroFIN - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
    